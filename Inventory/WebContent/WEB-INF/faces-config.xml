<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">

	<application>
		<resource-bundle>
			<base-name>resources.messages</base-name>
			<var>msgs</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>resources.config</base-name>
			<var>config</var>
		</resource-bundle>
		<locale-config>
			<default-locale>en</default-locale>
			<supported-locale>en</supported-locale>
			<supported-locale>it</supported-locale>
		</locale-config>
	</application>
	

   <navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>index</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
		<navigation-case>
			<from-outcome>upload-img-game</from-outcome>
			<to-view-id>/pages/report/upload-img-game.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
		<navigation-case>
			<from-outcome>user</from-outcome>
			<to-view-id>/pages/report/user.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
		<navigation-case>
			<from-outcome>inventory</from-outcome>
			<to-view-id>/pages/report/inventory.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
		<navigation-case>
			<from-outcome>owner</from-outcome>
			<to-view-id>/pages/report/owner.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
		<navigation-case>
			<from-outcome>barcode</from-outcome>
			<to-view-id>/pages/report/barcode.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
		<navigation-case>
			<from-outcome>office</from-outcome>
			<to-view-id>/pages/report/office.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
		<navigation-case>
			<from-outcome>map21</from-outcome>
			<to-view-id>/pages/map/map21.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
		<navigation-case>
			<from-outcome>map11</from-outcome>
			<to-view-id>/pages/map/map11.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>	
		<navigation-case>
			<from-outcome>map12</from-outcome>
			<to-view-id>/pages/map/map12.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>	
		<navigation-case>
			<from-outcome>map01</from-outcome>
			<to-view-id>/pages/map/map01.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
		<navigation-case>
			<from-outcome>generator-barcode</from-outcome>
			<to-view-id>/pages/util/barcode.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>				
    </navigation-rule>	
    
    <converter>
		<converter-id>barcode_itemconverter</converter-id>
		<converter-class>it.betplus.inventory.converter.Barcode_itemConverter</converter-class>
	</converter>	
	<converter>
		<converter-id>officeconverter</converter-id>
		<converter-class>it.betplus.inventory.converter.OfficeConverter</converter-class>
	</converter>
	<converter>
		<converter-id>personconverter</converter-id>
		<converter-class>it.betplus.inventory.converter.PersonConverter</converter-class>
	</converter>
	<converter>
		<converter-id>kindconverter</converter-id>
		<converter-class>it.betplus.inventory.converter.KindConverter</converter-class>
	</converter>
	<converter>
		<converter-id>generalkindconverter</converter-id>
		<converter-class>it.betplus.inventory.converter.GeneralKindConverter</converter-class>
	</converter>
	<converter>
		<converter-id>itemconverter</converter-id>
		<converter-class>it.betplus.inventory.converter.ItemConverter</converter-class>
	</converter>
</faces-config>
